extends ../layouts/main.pug

block main-content
  main.main
    section.mt-45.mb-30
      .container.w-full
        +breadcrumbs("Turkey", "Istanbul", "CVK Park Bosphorus Hotel Istanbul")
    .container
      .book-details.flex.items-start.gap-12
        section.book-details__info.flex.flex-col.gap-12.mb-40
          .book-details__info-header
            +flight-info(
              "Return Wed, Dec 8",
              "2h 28m",
              { logo: "./images/flight-detail/em-1.png", name: "Emirates", plane: "Airbus A320" },
              { start: "12:00 pm", startPoint: "Newark(EWR)", end: "14:00 pm", endPoint: "Newark(EWR)" },
              [
                "./images/icons/airplane-dark.svg",
                "./images/icons/wifi-dark.svg",
                "./images/icons/spedometer.svg",
                "./images/icons/food.svg",
                "./images/icons/recline.svg"
              ]
            )
          +payment-method(
            { 
              title: "Pay in full",
              desc: "Pay the total and you are all set",
              checked: true,
              id: "full"
            },
            { 
              title: "Pay part now, part later",
              desc: "Pay $207.43 now, and the rest ($207.43) will be automatically charged to the same payment method on Nov 14, 2022. No extra fees.",
              checked: false,
              id: "part"
            }
          )
          // Login
          include ../components/_auth.pug
        +price-info-card

    section.space-y-20
