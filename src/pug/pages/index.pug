    section.space-y-26
    section.places.mb-30
      .container
        +section-header("Let's go places together", "Discover the latest offers and news and start planning your next trip with us.", "See All")
      .places__map
        .container.h-full
          .places__inner.h-full
            .places__point.flex.items-center.gap-3.bg-white.py-4.pr-10.pl-4
              img(src="./images/flight/place-1.png", alt="")
              .flex.flex-col
                h4.text-ss.font-bold James Doe
                span.text-ss.font-regular Boarding Pass N'123
