mixin flight-order(src="./images/flight/fly-1.png", rating="", feedback="", price="", ...items)
  .flight-card.flex.items-start.justify-between.gap-12.bg-white.rounded-xl.card-shadow-xl.py-24.pl-24.pr-28
    img.flight-card__img(src=src)
    .flight-card__inner.flex.flex-col.gap-8.w-full
      .flight-card__header.flex.flex.justify-between.items-start.gap-8.whitespace-nowrap
        .flex.items-center.gap-3
          button.btn.btn__small.btn__plain= rating
          .flex.gap-2.items-center.text-xs
            span.font-semibold= feedback
            span 54 reviews
        .flex.flex-col.items-end.gap-1
          span.text-xs.font-medium starting from
          h4.text-2xl.font-bold.text-red= price
      .flight-card__body.flex.flex-col.gap-7.pb-18
        each i in items
          .flex.items-start.gap-5
            .flex.items-start.gap-4
              input(type="checkbox")
              .flex.flex-col.gap-2
                h5.text-md.font-semibold= i.interval
                span.text-sm= i.corp
            p.text-sm.font-semibold.ml-25.mr-25= i.type
            .flex.flex-col.gap-2
              h5.text-md.font-semibold= i.time
              span.text-sm= i.route
      .flight-card__footer.flex.justify-between.gap-6
        button.btn.btn__large.btn__plain
          img(src="./images/icons/heart-outline.svg")
        a.btn.btn__large.btn__success(href="flight-detail.html") View Details