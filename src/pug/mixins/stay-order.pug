mixin stay-order(src="", rating="", feedback="", price="", title="")
  .stays-card.flex.items-start.justify-between.gap-12.bg-white.rounded-xl.card-shadow-xl.py-24.pl-24.pr-28
    img.stays-card__img(src=src)
    .stays-card__inner.flex.flex-col.gap-8.w-full
      .stays-card__header.flex.flex.justify-between.items-start.gap-8.whitespace-nowrap
        h2.text-xl.font-bold.font-trade-gothic= title
        .flex.flex-col.items-end.gap-1
          span.text-xs.font-medium starting from
          h4.text-2xl.font-bold.text-red= price
      .stays-card__body.flex.flex-col.gap-7.pb-18
        .flex.items-start.flex-col.gap-6
          .flex.items-center.gap-1
            img.icon-sm(src="./images/icons/location-dark.svg")
            span.text-sm.font-medium Gümüssuyu Mah. Inönü Cad. No:8, Istanbul 34437
          .flex.items-center.gap-2
            .flex
              img(src="./images/stays/star.svg")
              img(src="./images/stays/star.svg")
              img(src="./images/stays/star.svg")
              img(src="./images/stays/star.svg")
              img(src="./images/stays/star.svg")
            p.text-xs.font-medium 5 Star Hotel
            p.text-xs.font-medium 20+ Aminities
          button.btn.btn__small.btn__plain= rating
          .flex.gap-2.items-center.text-xs
            span.font-semibold= feedback
            span 54 reviews
      .stays-card__footer.flex.justify-between.gap-6
        button.btn.btn__large.btn__plain
          img(src="./images/icons/heart-outline.svg")
        a.btn.btn__large.btn__success(href="flight-detail.html") View Details