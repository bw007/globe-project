//- Filter rating
mixin filter-rating(title="", ...items)
  .filter.filter__rating.flex.flex-col.gap-6.w-full.pb-25
    .filter__caption.flex.justify-between.items-center
      h5.text-md.font-semibold= title
      img(src="./images/icons/chevron-up.svg")
    .filter__rating-options.grid.gap-5
      each i in items
        button.btn.btn__small.btn__plain= i